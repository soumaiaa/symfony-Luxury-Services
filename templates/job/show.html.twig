{% extends 'base.html.twig' %}

{% block title %}Hello JobController!
{% endblock %}
{% block meta %}
	<meta name="base_url" content="http://www.fgtechs.fr/z-pedro/wwwluxuryservices">
	<meta
	name="csrf-token" content="9Tnm0YBCxgVTxoqI1HzccsU5NuE9RughZmhpzgXn">
	<!--  favicon -->
	<link rel="shortcut icon" href="assets/img/ico/fav.png">
{% endblock %}
{% block body %}
<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">{{ offre.title }}</h2>
                        <span class="white-text">Ref {{ offre.ref }}</span>
                        <ol class="breadcrumb">
                            <li>
                                <div class="portfolio-nav">
                                    {% if previousOffre is not null %}
                                        <a href="{{ path('app_show', {'id': previousOffre.id}) }}" class="waves-effect waves-dark"><i class="fa fa-angle-left" aria-hidden="true"></i> Prev</a>
                                    {% endif %}
                                    <a href="{{ path('app_job') }}" class="waves-effect waves-dark"><i class="fa fa-th-large" aria-hidden="true"></i></a>
                                    {% if nextOffre is not null %}
                                    <a href="{{ path('app_show', {'id': nextOffre.id}) }}" class="waves-effect waves-dark">Next <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                    {% endif %}
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <!-- Page Content-->
        <section class="single-project-section section-padding light-gray-bg">
            <div class="container">
                <div class="project-overview">
                    <div class="row mb-80">
                        <div class="col-xs-12 col-md-8">
                            <p class="ref grey-text no-margin">Ref {{ offre.ref }}</p>
                            <h2>{{ offre.title }}</h2>
                            <p>{{ offre.description }} </p>
                            <p>{{ offre.description }}</p>
                        </div>

                        <div class="col-xs-12 col-md-4 quick-overview">
                            <ul class="portfolio-meta">
                                <li><span> Pulished at </span>{{ offre.createdAt|date('d/m/h') }}</li>
                                <li><span> Position </span>{{ offre.position }}</li>
                                <li><span> Contract Type </span>{{ offre.typecontract }}</li>
                                <li><span> Salary </span>{{ offre.salaire }} &euro;</li>
                                <li><span> Location </span>{{ offre.location }}</li>
                                <li><span> Starting date </span>{{ offre.startingDate }}</li>
                            </ul>
                            {# {% if(!$candidatures)%} #}
                            <a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="">Apply for this job</a>
                             {# {% else if ($candidatures) %}  #}
                            <div class="btn btn-block btn-success mt-30 waves-effect waves-light disabled">You have applied for this job</div>
                            {# {% endif %} #}
                        </div>
                    </div>
                </div>

                <nav class="single-post-navigation no-margin" role="navigation">
                    <div class="row">

                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="previous-post-link">
                            {% if previousOffre is not null %}
                                <a class="btn border primary waves-effect waves-dark" href="{{ path('app_show', {'id': previousOffre.id}) }}">
                                    <i class="fa fa-long-arrow-left"></i>Previous
                                </a>
                            {% endif %}
                            </div>
                        </div>
                        <div class="hidden-xs hidden-sm col-md-4"></div>


                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="next-post-link">
                            {% if nextOffre is not null %}
                                <a class="btn border primary waves-effect waves-dark" href="{{ path('app_show', {'id': nextOffre.id}) }}">
                                    Next <i class="fa fa-long-arrow-right"></i>
                                </a>
                            {% endif %}
                            </div>
                        </div>

                    </div>
                </nav>
            </div>
        </section>

    </div>

</div>
{% block javascripts %}

	 <script type="text/javascript">
	
	    onAppReady(function() {
	        $('.preload').remove();
	    });
	</script>
{% endblock %}
{% endblock %}
